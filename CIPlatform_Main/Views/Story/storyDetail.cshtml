			<div class="row">
				<div class="col-md-6">
					<div class="copyright-menu">
						<ul>
							<li>
								<a asp-controller="Login" asp-action="PolicyPage" class="text-light">Privacy Policy</a>
							</li>


						</ul>
					</div>
				</div>
				<div class="col-md-6 rights">
