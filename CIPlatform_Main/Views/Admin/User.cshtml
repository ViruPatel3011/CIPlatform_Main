					uId: userId
				},
				dataType: 'json',
				success: function (data) {
					//for date only
					userid = userId
					$('#fName').val(data.firstName);
					$('#lName').val(data.lastName);
					$('#email').val(data.email);
					$('#empId').val(data.employeeId);
					$('#dept').val(data.department);
					$('#status').val(data.status);
					$('#userid').val(data.userId);
				},
