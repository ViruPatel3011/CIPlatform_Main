@model AdminViewModel



@{
	Layout = "~/Views/Admin/User.cshtml";
}
<!-- Right Part Div for Tables -->
<div class="col-12 col-xl-11 col-lg-9 col-md-11 ">

	<div class="row">
		<div class="col-12">
			<h3 class="mt-3 ms-3 mb-0">TimeSheet</h3>
			<hr class="m-0 mt-2">
		</div>
	</div>
	<div class="row mt-3">
		<div class="col-4 ">
			<div class="input-group rounded search-bar">
				<input type="search" class="form-control rounded" placeholder="Search" aria-label="Search"
					   aria-describedby="search-addon" id="search-bar" />
			</div>
		</div>


		<div class="col-8">
			<div class="addBtn float-end">
				<button type="button" class="btn btn-outline-warning px-3" style="border-radius: 50px;" >
					Goal Based Timesheet
				</button>

			</div>
		</div>

		<div class="row mt-3 mx-2 ">
			<div class="col-12 table-responsive-sm">
				<table class="table table-bordered table-striped" id="timesheet-table">
					<thead class="thead-dark">
						<tr>
							<th scope="col">Mission Title</th>
							<th scope="col">Date Volunteered</th>
							<th scope="col">Hours</th>
							<th scope="col">Minutes</th>
							<th scope="col">status</th>
							<th scope="col">Action</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var timesheet in Model.TimeSheetListTime)
						{
							var missionTitle = "";
							@foreach (var mission in Model.MissionList)
							{
								if (mission.MissionId == timesheet.MissionId)
								{
									missionTitle = mission.Title;
								}
							}

							<tr>
								<td scope="row">@missionTitle</td>
								<td scope="row">@timesheet.DateVolunteered</td>

								<td scope="row">@timesheet.TimesheetTime?.Hour</td>
								<td scope="row">@timesheet.TimesheetTime?.Minute</td>
								
								@if (timesheet.Status == "Approved")
								{
									<td class="text-success" scope="row">@timesheet.Status</td>
								}
								else if (timesheet.Status == "Pending")
								{
									<td class="text-warning" scope="row">@timesheet.Status</td>

								}
								else
								{
									<td class="text-danger" scope="row">@timesheet.Status</td>

								}


								<td class="p-0 pt-2 px-1 d-flex">
									
									<div class="mb-2">
										@if (timesheet.Status == "Approved")
										{
											<button type="button" class="border-0 bg-transparent" disabled>
												<i class="bi bi-check-circle text-dark"></i>
											</button>
										}
										else
										{

											<button type="button" data-bs-toggle="modal"
													data-bs-target="#exampleModalApproveTimeSheet" class="border-0 bg-transparent" onclick="getTimeId(@timesheet.TimesheetId)">
												<i class="bi bi-check-circle text-success"></i>
											</button>
										}

										<div class="modal fade" id="exampleModalApproveTimeSheet" tabindex="-1"
											 aria-labelledby="exampleModalLabel" aria-hidden="true">
											<div class="modal-dialog modal-dialog-centered">
												<div class="modal-content">
													<div class="modal-header">
														<h5 class="modal-title" id="exampleModalLabel">Confirm Approved?</h5>
														<button type="button" class="btn-close"
																data-bs-dismiss="modal" aria-label="Close"></button>
													</div>
													<div class="modal-body">

														<div class="mb-3">
															<label for="exampleFormControlInput1"
																   class="form-label">Are you sure you want to Approve this Timesheet??</label>
														</div>

													</div>
													<div class="modal-footer">
														<button type="button" class="btn btn-outline-dark"
																style="border-radius:50px"
																data-bs-dismiss="modal">
															Cancel
														</button>
														<button type="button" class="btn btn-outline-warning"
																style="border-radius:50px" data-bs-dismiss="modal" onclick="ApproveTimeBasedSheet()">
															Approve
														</button>
													</div>
												</div>
											</div>
										</div>


										

									</div>

									<div class="mb-2">	
										@if (timesheet.Status == "Rejected")
										{
											<button type="button" class="border-0 bg-transparent" disabled>
												<i class="bi bi-x-circle text-dark"></i>
											</button>
										}
										else
										{

											<button type="button" data-bs-toggle="modal"
													data-bs-target="#exampleModalRejectTimeSheet" class="border-0 bg-transparent" onclick="RejectTimeId(@timesheet.TimesheetId)">
												<i class="bi bi-x-circle text-danger"></i>
											</button>
										}

										<div class="modal fade" id="exampleModalRejectTimeSheet" tabindex="-1"
											 aria-labelledby="exampleModalLabel" aria-hidden="true">
											<div class="modal-dialog modal-dialog-centered">
												<div class="modal-content">
													<div class="modal-header">
														<h5 class="modal-title" id="exampleModalLabel">Confirm Reject?</h5>
														<button type="button" class="btn-close"
																data-bs-dismiss="modal" aria-label="Close"></button>
													</div>
													<div class="modal-body">

														<div class="mb-3">
															<label for="exampleFormControlInput1"
																   class="form-label">Are you sure you want to Reject this Timesheet??</label>
														</div>

													</div>
													<div class="modal-footer">
														<button type="button" class="btn btn-outline-dark"
																style="border-radius:50px"
																data-bs-dismiss="modal">
															Cancel
														</button>
														<button type="button" class="btn btn-outline-warning"
																style="border-radius:50px" data-bs-dismiss="modal" onclick="rejectTimesheet()">
															Reject
														</button>
													</div>
												</div>
											</div>
										</div>




									</div>

									<div class="mb-2">
										@if (timesheet.Status == "Deleted")
										{
											<button type="button" class="border-0 bg-transparent" disabled>
												<i class="bi bi-trash3 text-dark"></i>
											</button>
										}
										else
										{

											<button type="button" data-bs-toggle="modal"
													data-bs-target="#exampleModalDeleteTimeSheet" class="border-0 bg-transparent" onclick="getTimeDelete(@timesheet.TimesheetId)">
												<i class="bi bi-trash3 text-dark"></i>
											</button>
										}

										<div class="modal fade" id="exampleModalDeleteTimeSheet" tabindex="-1"
											 aria-labelledby="exampleModalLabel" aria-hidden="true">
											<div class="modal-dialog modal-dialog-centered">
												<div class="modal-content">
													<div class="modal-header">
														<h5 class="modal-title" id="exampleModalLabel">Confirm Delete?</h5>
														<button type="button" class="btn-close"
																data-bs-dismiss="modal" aria-label="Close"></button>
													</div>
													<div class="modal-body">

														<div class="mb-3">
															<label for="exampleFormControlInput1"
																   class="form-label">Are you sure you want to Delete this Timesheet??</label>
														</div>

													</div>
													<div class="modal-footer">
														<button type="button" class="btn btn-outline-dark"
																style="border-radius:50px"
																data-bs-dismiss="modal">
															Cancel
														</button>
														<button type="button" class="btn btn-outline-warning"
																style="border-radius:50px" data-bs-dismiss="modal" onclick="DeleteTime()">
															Delete
														</button>
													</div>
												</div>
											</div>
										</div>




									</div>

								</td>
							</tr>


						}

					</tbody>
				</table>
			</div>
		</div>


	</div>

</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.js"></script>

<script>

	timebaseId = 0;
	function getTimeId(tId) {
		timebaseId = tId
	}




	function ApproveTimeBasedSheet(){
		$.ajax({
			url: "/Admin/ApprovedTimeSheet",
			type: "POST",
			data: {
				timeId: timebaseId

			},
			success: function (result) {
				location.reload();
				//alert("User Approved successfully");


			},
			error: function (result) {
				alert("error occur in Timesheet");
			}
		});
	}



	var rejectTime=0;
	function RejectTimeId(rejectId){
		rejectTime = rejectId
	}

	function rejectTimesheet(){
		$.ajax({
			url: "/Admin/RejectTimeSheet",
			type: "POST",
			data: {
				rejectTid: rejectTime

			},
			success: function (result) {
				location.reload();
				//alert("User Approved successfully");


			},
			error: function (result) {
				alert("error occur in Timesheet");
			}
		});
	}


	var deleteTimeId=0;
	function getTimeDelete(dTid){
		deleteTimeId=dTid
	}


	function DeleteTime(){
		$.ajax({
			url: "/Admin/DeleteTimeSheet",
			type: "POST",
			data: {
				deleteTid: deleteTimeId

			},
			success: function (result) {
				location.reload();
				//alert("User Approved successfully");


			},
			error: function (result) {
				alert("error occur in Timesheet");
			}
		});
	}




	// For pagination and Search
	$(document).ready(function () {
		var dataTable = $('#timesheet-table').DataTable({
			"pageLength": 4,
		});
		$('#search-bar').keyup(function () {
			dataTable.search(this.value).draw();
		});
	});


	$('#timehsheetLink').addClass('bg-white')
	$('#timehsheetLink').css("color", "orange");
	

</script>