@model AdminViewModel


<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
	  integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/User.css">


<style>
	#cms-table_filter {
		margin-right: 77%;
		margin-bottom: 16px;
	}

	#cms-table_previous, #cms-table_next {
		display: none;
	}

	#cms-table_paginate {
		margin-top: 20px
	}
</style>
	<!-- Right Part Div for Tables -->
<div class="col-12 col-xl-10 col-lg-9 col-md-11 ">
	<div class="row shadow-lg " style="height:50px;">
		<div class="col-12 d-flex bg-white ">
			<div class="col-3 d-block d-md-none d-flex align-items-center">
				<button class="border-0 bg-white" type="button" data-bs-toggle="offcanvas"
						data-bs-target="#Adminoffcanvas" aria-controls="offcanvasWithBothOptions">
					<i class="bi bi-list " style="font-size:40px;"></i>
				</button>
			</div>
			<div class="col-6 d-flex align-items-center">
				@{
					DateTime now = DateTime.Now;
					string formattedTime = now.ToString("dddd, MMMM d, yyyy, h:mm:ss tt");

				}
				@formattedTime
			</div>
			<div class="col-6 d-none d-md-block">
				<div class="dropdown d-flex justify-content-end ">
					<button class="btn ms-auto me-3 dropdown-toggle " type="button"
							data-bs-toggle="dropdown" aria-expanded="false">
						<img src="~/Assets/user1.png" alt="mdo" width="40" height="40"
		class="rounded-circle loginimg">
						Dropdown button
					</button>
					<ul class="dropdown-menu">
						<li><a class="dropdown-item" href="#">Action</a></li>
						<li><a class="dropdown-item" href="#">Another action</a></li>
						<li><a class="dropdown-item" href="#">Something else here</a></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			<h3 class="mt-3 ms-3 mb-0">CMS Page</h3>
			<hr class="m-0 mt-2">
		</div>
	</div>
	<div class="row mt-3">
		<div class="col-4 ">
			<div class="input-group rounded">
				<input type="search" class="form-control rounded search-bar" placeholder="Search" aria-label="Search"
					   aria-describedby="search-addon" id="search-bar" />
			</div>
		</div>
		<div class="col-8">
			<div class="addBtn float-end">
				<button class="btn btn-outline-warning px-3" style="border-radius: 50px;" id="cmsAdd">
					Add
				</button>
			</div>
		</div>
	</div>
	<div class="row mt-3 mx-2 ">
		<div class="col-12 table-responsive-sm">
			<table class="table table-bordered table-striped" " id="cms-table">
				<thead class="thead-dark">
					<tr>

						<th scope="col">Title</th>
						<th scope="col">Status</th>
						<th scope="col">Action</th>
					</tr>
				</thead>
				<tbody>
				@foreach (var cms in Model.CMSPageList)
				{
						<tr>
							<td>@cms.Title</td>
						@if (cms.Status == "Active")
						{
							
							<td class="text-success">@cms.Status</td>
						}
						else
						{
							<td class="text-danger">@cms.Status</td>
							
						}
						<td class="p-0 pt-2 px-1 d-flex">
								<div class="mb-2">
									

									<button type="button" data-bs-toggle="modal"
											data-bs-target="#exampleModalGoalEdit" class="border-0 bg-transparent" onclick="loadCMSpageData(@cms.CmsPageId)">
										<i class="bi bi-pencil-square text-warning"></i>
									</button>

									

								</div>
							
							</td>
						</tr>
				}
				
				</tbody>
			</table>
		</div>
	</div>
	</div>


	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/jquery/dist/jquery.js"></script>
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script type="text/javascript" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.js"></script>

<script>
	$(function () {
		$('#cmsAdd').on('click', function () {
			$.ajax({
				url: '@Url.Action("CMSAdd", "Admin")',
				type: 'GET',
				success: function (result) {
					$('#loadSideBar').html(result);
				}
			});
		});
	});

	function submitCMSData(){

		var title = $("#title").val();
		var text = $("#CMStext").val();
		var slug = $("#slug").val();
		var status = $("#status").val();

		$.ajax({
			method:'POST',
			url: "/Admin/AddCMSPageData",
			data:{
				Title: title,
				Description: text,
				Slug: slug,
				Status: status,
			},
			success: function (data) {
				location.reload();
				//alert("deleted Successfully");
			},
			error: function (result) {
				alert("error occur in Mission");
			}
		});




	}
	var cmsPageId=0;

	function getCMSId(cmsId){
		cmsPageId = cmsId
	}

	function deleteCMSData(){
		$.ajax({
			method: 'POST',
			url: '/Admin/deleteCMSPageData',
			data: {
				cmsId: cmsPageId
			},
			success: function (data) {
				location.reload();
				//alert("deleted Successfully");
			},
		});

	}

	function loadCMSpageData(cmsId){

		$.ajax({
			url: '@Url.Action("CMSEdit", "Admin")',
			type: 'GET',
			success: function (result) {
				$('#loadSideBar').html(result);
			}
		});

		$.ajax({
			method: 'GET',
			url: '/Admin/getCMSDataForEdit',
			data: {
				cmsid: cmsId
			},
			dataType: 'json',
			success: function (data) {


				//$('#missionName').val(data.mission);
				$('#title').val(data.cmsTitle);
				$('#CMStext').val(data.cmsText);
				$('#slug').val(data.cmsSlug);
				$('#status').val(data.cmsStatus);
				

			},
			error: function (xhr, status, error) {
				// Handle errors
			}
		});
	}



		$(document).ready(function () {
			var dataTable = $('#cms-table').DataTable({
				"pageLength": 3,
			});
			$('#search-bar').keyup(function () {
				dataTable.search(this.value).draw();
			});
		});
</script>

