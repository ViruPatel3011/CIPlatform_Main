<script type="text/javascript">
	$(document).ready(function () {
		var dataTable = $('#user-table').DataTable({
			"pageLength": 4,
		});
		$('#search-bar').keyup(function () {
			dataTable.search(this.value).draw();
		});
	});
</script>
