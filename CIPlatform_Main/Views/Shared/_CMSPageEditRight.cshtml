@model AdminViewModel

@{
	Layout = "~/Views/Admin/User.cshtml";
}

<h2 class="ps-3 mt-4 ms-2">Edit</h2>
<form method="post" asp-controller="Admin" asp-action="EditCMSPageData">
	@*cmsPageid is for Data Edit post method and cmsId is for getdata for Edit*@
	<input hidden name="cmsPageid" id="cmsId" asp-for="loadCMsid">
<div class="col-12 col-xl-10 col-lg-9 col-md-11 ">
	<div class="row mx-2 mt-1">
		<div class="col-12">
			<label for="inputEmail4 ">Title</label>
				<input class="form-control mt-1" id="title" type="text" placeholder="Enter CMS Page Title" asp-for="CMSTitle">
		</div>
	</div>
	<div class="row mx-2 mt-2">
		<div class="col-12 my-3">
			<label for="inputEmail4">Description</label>
				<textarea id="CMStext" value="CMStext" class="w-100  mt-2 form form-control" placeholder="Enter CMS Description" rows="5" asp-for="CMSDescrition"></textarea>
		</div>
	</div>
	<div class="row mx-2 mt-1">
		<div class="col-12">
			<label for="inputEmail4 ">Slug</label>
				<input class="form-control mt-1" id="slug" type="text" placeholder="Enter CMS Slug"  asp-for="CMSSlug">
		</div>
	</div>
	<div class="row mx-2 mt-1">
		<div class="col-12">
			<label for="inputEmail4 ">Status</label>
				<input class="form-control mt-1" id="status" type="text" placeholder="Active/Deactive" asp-for="CMSStatus">
		</div>
	</div>
</div>


<div class="row mx-2 mt-2">
	<div class="col-12 d-flex justify-content-end">
		<div>
			<a asp-controller="Admin" asp-action="CMSPage" class="btn btn-outline-warning me-2" style="border-radius: 50px;">Cancel</a>
			<button type="submit" class="btn btn-outline-warning" style="border-radius: 50px;" >Save</button>



		</div>
	</div>
</div>

</form>